<%= form_for(@person, html: { multipart: true }, builder: WrappingTidyFormBuilder) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.password_field :secret, required: true %>
  </div>

  <div class="field">
    <%= f.country_select :country, required: true %>
  </div>

  <div class="field">
    <%= f.text_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.text_area :description, cols: 30, rows: 10 %>
  </div>

  <div class="field">
    <%= f.check_box :can_send_email, required: true %>
  </div>

  <div class="field">
    <%= f.hidden_field :graduation_year %>
  </div>

  <div class="field">
    <%= f.text_field :body_temperature %>
  </div>

  <div class="field">
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.time_select :favorite_time %>
  </div>

  <div class="field">
      <%= f.file_field :photo %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
