<p>
	<%= link_to "Students", students_url %> |
	<%= link_to "Courses", courses_url %> |
	<% if current_user %>
		Logged in as <%= current_user.email %>.
		<%= link_to "Log Out", logout_path %>
	<% else %>
	  <%= link_to "Sign Up", signup_path,  data: {:"reveal-id"=>"signup-form"} %> |
	  <%= link_to "Log In", login_path, data: {:"reveal-id"=>"login-form"} %>
	<% end %>
</p>

<hr />

<div id="signup-form" title="User" data-reveal>
	<%= render template: "users/new" %>
	<a class="close-reveal-modal">&#215;</a>
</div>

<div id="login-form" title="Session" data-reveal>
	<%= render template: "sessions/new" %>
	<a class="close-reveal-modal">&#215;</a>
</div>